%% \bxce@parse@cc{<word>}
% Parse the character name or code value, and return:
% \bxce@cnta>=0: code value (\bxce@arg is hex-string)
% \bxce@cnta=-1: error (\bxce@arg is the original input)
% \bxce@cnta=-2: rescan (\bxce@arg is the string to scan)
\def\bxce@parse@cc#1{%
  \def\bxce@arg{#1}%
  \uppercase{\bxce@parse@cc@a#1}\bxce@end#1\bxce@end
