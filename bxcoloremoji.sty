  \else\ifx:#2%
    \bxce@parse@cc@c#3\bxce@mk:\bxce@mk\bxce@end{#3}%
  \else
    \bxce@parse@cc@c#2#3\bxce@mk:\bxce@mk\bxce@end{#2#3}%
  \fi\fi
}
